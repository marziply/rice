# vi: ft=gitconfig

[user]
	name = marziply
	email = contact@marziply.dev
	signingkey = 5462549313B7F96740FD8EF2B541A47F7633DD59
[core]
	editor = nvim
	pager = delta
	sshcommand = ssh -i "$KEYS_DIR/rsa/github.pem" -F /dev/null
[url "ssh://git@github.com/"]
	insteadof = "https://github.com/"
[pull]
	rebase = true
[push]
	recursesubmodules = on-demand
[commit]
	gpgsign = true
[credential]
	helper = cache
[init]
	defaultbranch = master
[alias]
	conflicts = diff --name-only --diff-filter=U
	commit = -c "gpg.program = $SCRIPTS_DIR/gpg.sh" commit
[interactive]
	difffilter = delta --color-only
[diff]
	colormoved = default
[delta]
	navigate = true
	light = false
[merge]
	tool = native
	conflictstyle = diff3
[mergetool]
	trustexitcode = true
	keepbackup = false
	prompt = false
[mergetool "native"]
	cmd = nvim -d "$BASE" "$LOCAL" "$REMOTE" "$MERGED" -c '$wincmd w' -c 'wincmd J'
[mergetool "fugitive"]
	cmd = nvim -c Gdiffsplit! "$MERGED" -c 'Git mergetool' -c 'normal zt'
[mergetool "diffconflicts"]
	cmd = nvim -c DiffConflicts "$MERGED" "$BASE" "$LOCAL" "$REMOTE"
[filter "strongbox"]
	clean = strongbox -clean %f
	smudge = strongbox -smudge %f
	required = true
[diff "strongbox"]
	textconv = strongbox -diff
