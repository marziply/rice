[core]
	editor = nvim
	sshcommand = ssh -i ~/.ssh/id_rsa -F /dev/null
[pull]
	rebase = true
[push]
	recursesubmodules = on-demand
[commit]
	gpgsign = true
[credential]
	helper = cache
[init]
	defaultbranch = master
# [gpg]
# 	program = /home/hayden/.config/scripts/gpg.sh
[alias]
	conflicts = diff --name-only --diff-filter=U
	commit = -c "gpg.program = $XDG_CONFIG_HOME/scripts/gpg.sh" commit
[merge]
  tool = native
	conflictstyle = diff3
[mergetool]
	trustexitcode = true
	keepbackup = false
	prompt = false
[mergetool "native"]
  cmd = nvim -d "$BASE" "$LOCAL" "$REMOTE" "$MERGED" -c '$wincmd w' -c 'wincmd J'
[mergetool "fugitive"]
  cmd = nvim -c Gdiffsplit! "$MERGED" -c 'Git mergetool' -c 'normal zt'
[mergetool "diffconflicts"]
  cmd = nvim -c DiffConflicts "$MERGED" "$BASE" "$LOCAL" "$REMOTE"
